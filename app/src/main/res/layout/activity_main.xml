<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ImageView
            android:id="@+id/iv_ada_lovelace"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/adalovelace"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:id="@+id/tv_ada_lovelace"
            app:layout_constraintStart_toEndOf="@id/iv_ada_lovelace"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
            android:id="@+id/iv_denis_ritchie"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/denisritchie"
            app:layout_constraintTop_toBottomOf="@+id/iv_ada_lovelace"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:id="@+id/tv_denis_ritchie"
            app:layout_constraintStart_toEndOf="@id/iv_denis_ritchie"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_ada_lovelace"/>
    <ImageView
            android:id="@+id/iv_linus_torvalds"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/linustorvalds"
            app:layout_constraintTop_toBottomOf="@id/iv_denis_ritchie"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:id="@+id/tv_linus_torvalds"
            app:layout_constraintStart_toEndOf="@id/iv_linus_torvalds"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_denis_ritchie"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0"/>

</android.support.constraint.ConstraintLayout>